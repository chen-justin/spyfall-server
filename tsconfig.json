{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "src/types/*"
            ]
        },
        "lib" : ["es2015", "es2016", "dom", "es2018.promise"]
    },
    "include": [
        "src/**/*"
    ]
}